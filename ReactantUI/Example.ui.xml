<?xml version="1.0" encoding="UTF-8" ?>
<UI type="ExampleRootView" rootView="true">
    <styles>
        <style type="UILabel">
            <textColor>#AABBCC</textColor>
            <font>System(10)</font>
        </style>
    </styles>

    <Container layout:edges="super">
        <Label layout:id="helloWorldLabel" text="Hello world" />
        <Label text="Hello!">
            <layout id="test">
                <below target="id:helloWorldLabel" field="tralingConstraint" />
                <sides target="super" collapsible="uninstall|install|constant(0, 10)" />
            </layout>
        </Label>
        <TextField placeholder="E-mail" field="email" />
        <Button
        title="Send"
        field="send"
        layout:leading="buttonLeadingConstraint = super inset(40)"
        layout:trailing="super inset(40)"
        layout:left="super inset(40)"
        layout:right="super inset(40)"
        layout:width="40"
        layout:height="buttonHeightConstraint = 50"
        layout:below="email"
        layout="edges.inset(super, 40); width(40); height(50)" />

    </Container>

    <Component type="ExampleView2"/>
</UI>
