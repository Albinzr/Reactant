<?xml version="1.0" encoding="UTF-8" ?>
<UI xmlns="http://www.brightify.org"
    xmlns:layout="http://www.brightify.org/layout"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.brightify.org ../schema/ReactantUI.xsd
                        http://www.brightify.org/layout ../schema/Layout.xsd"
    type="ExampleRootView"
    rootView="true">

    <!--<styles>
        <style type="UILabel">
            <textColor>#AABBCC</textColor>
            <font>System(10)</font>
        </style>
    </styles>-->

    <ImageView
        layout:edges="super inset(-20)"
        image="falcon"
        contentMode="scaleAspectFill" />

    <ScrollView layout:edges="super">
        <Container
            layout:edges="super"
            layout:width="super">

            <Label
                layout:id="helloWorldLabel"
                textColor="white"
                text="Falcon 9"
                font=":bold@30"
                numberOfLines="0"
                textAlignment="center"
                layout:fillHorizontally="super inset(20)"
                layout:top="super offset(60)"/>

            <Label
                layout:id="prdel"
                text="Keep your rocket safe"
                font=":regular@14"
                numberOfLines="0"
                textAlignment="center"
                textColor="#ffffff"
                layout:below="id:helloWorldLabel offset(10)"
                layout:fillHorizontally="super inset(20)"/>

            <TextField
                placeholder="E-mail"
                field="email"
                textColor="white"
                layout:below="id:prdel offset(50)"
                layout:above="send offset(-50)"
                layout:fillHorizontally="super inset(50)"/>

            <Button
                title="Register now"
                titleColor="white"
                titleColor.highlighted="black"
                font=":medium@20"
                numberOfLines="0"
                backgroundColor="black"
                backgroundColor.highlighted="white"
                field="send"
                layout:leading="buttonLeadingConstraint = super inset(40)"
                layout:trailing="super inset(40)"
                layout:height="buttonHeightConstraint = 50" />

            <Button
                layout:id="neco"
                title="Forgotten password?"
                backgroundColor="#FFddaa"
                layout:fillHorizontally="super inset(60)"
                layout:height="50"
                layout:below="send offset(70)"/>
            <StackView
                axis="vertical"
                layout:below="id:neco offset(20)"
                layout:fillHorizontally="super inset(20)"
                layout:bottom="super inset(20)">
                <Component type="ExampleView2" />
                <Component type="ExampleView2" />
                <Component type="ExampleView2" />
                <Component type="ExampleView2" />
                <Component type="ExampleView2" />
                <Component type="ExampleView2" />
                <Component type="ExampleView2" />
                <Component type="ExampleView2" />
                <Component type="ExampleView2" />
                <Component type="ExampleView2" />
                <Component type="ExampleView2" />
            </StackView>
        </Container>
    </ScrollView>
</UI>
